{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "cloudfront.amazonaws.com"
            },
            "Action": "s3:GetObject",
            "Resource": [
                "${s3_arn}/*",
                "${s3_arn}"
            ],
            "Condition": {
                "ArnLike": {
                    "AWS:SourceArn": "${cloudfront_arn}"
                }
            }
        }
    ]
}
